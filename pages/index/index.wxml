<view class="container">
  <navigation-bar title="我的" back="{{false}}" color="black" background="#ffffff"></navigation-bar>
  
  <view class="content">
    <view class="user-card">
      <view class="avatar">👤</view>
      <view class="user-info">
        <view class="username">单词学习者</view>
        <view class="study-days">已学习 <text>{{studiedDays || 0}}</text> 天</view>
      </view>
    </view>

    <!-- 学习统计区域 -->
    <view class="stats-section">
      <view class="section-title">学习统计</view>
      <view class="stats">
        <view class="stat-item">
          <text class="stat-number">{{totalWords}}</text>
          <text class="stat-label">总单词数</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{studiedWords}}</text>
          <text class="stat-label">已学习</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{masteredWords}}</text>
          <text class="stat-label">已掌握</text>
        </view>
      </view>
    </view>

    <!-- 功能菜单 -->
    <view class="menu-section">
      <view class="section-title">功能菜单</view>
      <view class="menu-list">
        <view class="menu-item" bindtap="goToWordList">
          <view class="menu-icon">📚</view>
          <view class="menu-text">单词本</view>
          <view class="menu-arrow">›</view>
        </view>
        <view class="menu-item" bindtap="clearProgress">
          <view class="menu-icon">🔄</view>
          <view class="menu-text">重置进度</view>
          <view class="menu-arrow">›</view>
        </view>
        <view class="menu-item" bindtap="about">
          <view class="menu-icon">ℹ️</view>
          <view class="menu-text">关于</view>
          <view class="menu-arrow">›</view>
        </view>
      </view>
    </view>
  </view>
</view>