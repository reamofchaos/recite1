/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow-x: visible;
}


/* 导航栏样式 - 确保标题居中 */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.weui-navigation-bar {
  position: relative;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.weui-navigation-bar__center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: static;
}

.weui-navigation-bar__title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin: 0;
  padding: 0;
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  line-height: normal;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
}

/* 微信小程序scroll-view样式 */
.page-scrollable {
  height: calc(100vh - 80px);
  width: 100%;
  padding: 20rpx 20rpx;
  padding-bottom: 200rpx;
  -webkit-overflow-scrolling: touch;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 微信小程序滚动条样式 */
.page-scrollable::-webkit-scrollbar {
  width: 6rpx;
  height: 6rpx;
}

.page-scrollable::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 3rpx;
}

.page-scrollable::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 3rpx;
}

/* 统计概览容器 */
.stats-overview-wrapper {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 0;
  box-sizing: border-box;
}

.stats-overview {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: stretch;
  width: 100%;
  gap: 12rpx;
  box-sizing: border-box;
}

.stat-card {
  flex: 1;
  width: calc(33.333% - 8rpx);
  background-color: rgba(255, 255, 255, 0.2);
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 120rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

/* 统计数字 */
.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1.2;
  margin: 0;
  padding: 0;
}

/* 统计标签 */
.stat-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.2;
  margin-top: 8rpx;
  padding: 0;
}

/* 确保内部元素正确显示 */
.stat-card view {
  width: 100%;
  text-align: center;
}

/* 功能入口网格 */
.features-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 50rpx;
  padding: 0;
  box-sizing: border-box;
  overflow: hidden;
}

.feature-card {
  width: calc(50% - 15rpx);
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
  box-sizing: border-box;
  flex-shrink: 0;
}

.feature-card:active {
  transform: scale(0.98);
}

.feature-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
}

/* 设置区域样式 */
.settings-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 25rpx 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  flex: 1;
}

.setting-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
}

.setting-options {
  display: flex;
  gap: 15rpx;
}

.option {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.option.active {
  background-color: #667eea;
  color: #fff;
}

/* 重置进度模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 44rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.modal-actions .btn-primary {
  flex: 1;
  background-color: #667eea;
  color: #fff;
  border: none;
  border-radius: 45rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}

.modal-actions .btn-secondary {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 45rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}

/* 学习页面样式 */
.study-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.progress-fill {
  height: 100%;
  background-color: #fff;
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  position: absolute;
  right: 0;
  top: 20rpx;
  color: #fff;
  font-size: 24rpx;
}

/* 单词卡片 */
.word-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  perspective: 1000rpx;
  transform-style: preserve-3d;
  transition: transform 0.6s;
  margin-bottom: 60rpx;
}

.word-card.flipped {
  transform: rotateY(180deg);
}

.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card-back {
  transform: rotateY(180deg);
}

.word-text {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.translation-text {
  font-size: 40rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.btn-difficult,
.btn-easy {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.btn-difficult {
  background-color: #ff7675;
  color: #fff;
}

.btn-easy {
  background-color: #00b894;
  color: #fff;
}

/* 学习完成界面 */
.completion {
  text-align: center;
  padding: 60rpx 0;
}

.completion-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.completion-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 60rpx;
}

.completion-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.stat-item {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 30rpx;
  border-radius: 15rpx;
  min-width: 150rpx;
}

.completion-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.completion-actions button {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

.empty-text {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
}

/* 响应式设计 - 确保在所有屏幕尺寸下都能正确显示 */
@media screen and (max-width: 375px) {
  /* 保持统计卡片三列布局 */
  .stats-overview {
    flex-wrap: nowrap;
    gap: 8rpx;
  }
  
  .stat-card {
    flex: 1;
    width: calc(33.333% - 6rpx);
    padding: 15rpx 8rpx;
  }
  
  /* 保持功能卡片两列布局 */
  .feature-card {
    width: calc(50% - 12rpx);
    margin-bottom: 15rpx;
    padding: 25rpx 15rpx;
  }
  
  /* 调整设置区域内边距 */
  .settings-section {
    padding: 20rpx 15rpx;
  }
}